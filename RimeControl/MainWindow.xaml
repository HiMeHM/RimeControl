                        <TextBox Name="TbSchemaInfo" Grid.Column="1"  Text="" IsReadOnly="True" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"></TextBox>
                    </Grid>
                </Grid>
